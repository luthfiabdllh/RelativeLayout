<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_phone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/samsung"
        android:layout_marginTop="16dp"
        android:layout_below="@id/txt_title"
        />
    <TextView
        android:id="@+id/txt_phone_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16sp"
        android:layout_marginLeft="16sp"
        android:layout_below="@id/img_phone"
        />
    <TextView
        android:id="@+id/txt_phone_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_price"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/img_phone"
        android:layout_marginTop="16sp"
        android:layout_marginRight="16sp"
        android:layout_alignEnd="@id/img_phone"
        />
    <TextView
        android:id="@+id/txt_phone_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_description"
        android:textSize="16sp"
        android:layout_below="@id/txt_phone_name"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="12dp"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/txt_phone_description"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"/>
    <LinearLayout
        android:id="@+id/placeCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginHorizontal="16sp"
        >
        <ImageView
            android:id="@+id/vector_camera"
            android:src="@drawable/baseline_photo_camera_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/placeMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeCamera"
        android:layout_marginHorizontal="16sp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/vector_smartphone"
            android:src="@drawable/baseline_smartphone_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/txt_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/memory"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/buttonBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookmark"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/baseline_bookmark_border_24"
        android:drawableTint="@color/white"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        />






</RelativeLayout>